      <script>
        let isDragging = false;
        let initialX;
      
        document.addEventListener('mousedown', (e) => {
          isDragging = true;
          initialX = e.clientX;
        });
      
        document.addEventListener('mouseup', () => {
          isDragging = false;
        });
      
        document.addEventListener('mousemove', (e) => {
          if (!isDragging) return;
      
          const newsContainer = document.querySelector('.news-container');
          const scrollSpeed = 2;
          const deltaX = e.clientX - initialX;
          newsContainer.scrollLeft -= deltaX * scrollSpeed;
          initialX = e.clientX;
        });
      
        // Show initial set of news cards
        showInitialCards();
      
        // Show initial set of news cards
        function showInitialCards() {
          const newsContainer = document.querySelector('.news-container');
          const newsCards = document.querySelectorAll('.news-card');
          let visibleCount = 0;
      
          newsCards.forEach((card) => {
            if (visibleCount < 3) {
              card.style.display = 'block';
              visibleCount++;
            }
          });
      
          newsContainer.addEventListener('scroll', () => {
            if (newsContainer.scrollLeft + newsContainer.clientWidth >= newsContainer.scrollWidth) {
              showNextCards();
            }
          });
        }
      
        // Show next set of news cards
        function showNextCards() {
          const newsCards = document.querySelectorAll('.news-card');
          let visibleCount = 0;
      
          newsCards.forEach((card) => {
            if (card.style.display !== 'block' && visibleCount < 3) {
              card.style.display = 'block';
              visibleCount++;
            }
          });
        }
      </script>
      
